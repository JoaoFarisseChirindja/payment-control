<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="498.0" prefWidth="784.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ListagemCriancasController">
   <children>
      <Label text="Crianças">
         <font>
            <Font name="Arial Black" size="18.0" />
         </font>
         <padding>
            <Insets left="5.0" top="5.0" />
         </padding>
      </Label>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
         <items>
            <AnchorPane prefHeight="30.0" prefWidth="682.0">
               <children>
                <Button fx:id="btNovaCrianca" layoutY="5.0" mnemonicParsing="false" onAction="#onBtNovaCriancaAction" text="Nova Criança">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font>
                  </Button>
                  <TextField fx:id="txtPesquisa" layoutX="275.0" layoutY="5.0" promptText="Digite algo..." />
                  <ComboBox fx:id="cbPesquisa" layoutX="438.0" layoutY="5.0" prefWidth="150.0" promptText="Selecione" />
                  <Button fx:id="btPesquisa" layoutX="594.0" layoutY="5.0" mnemonicParsing="false" onAction="#onBtPesquisarAction" text="Pesquisar" />
               </children>
            </AnchorPane>
         </items>
      </ToolBar>
      <TableView fx:id="tableViewCrianca" prefHeight="240.0" prefWidth="700.0">
        <columns>
          <TableColumn fx:id="tableColumnNome" prefWidth="123.0" text="Nome" />
          <TableColumn fx:id="tableColumnResponsavel" prefWidth="145.0" text="Responsável" />
            <TableColumn fx:id="tableColumnTelefone" prefWidth="141.0" text="Telefone" />
            <TableColumn fx:id="tableColumnEscola" prefWidth="107.0" text="Escola" />
            <TableColumn fx:id="tableColumnAno" prefWidth="98.0" text="Ano" />
            <TableColumn fx:id="tableColumnPeriodo" prefWidth="85.0" text="Período" />
            <TableColumn prefWidth="84.0" />
        </columns>
      </TableView>
   </children>
</VBox>
